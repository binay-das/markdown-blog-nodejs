<div class="form-group">
    <h3>Title</h3>
    <input type="text" name="title" value="<%= article.title %>" id="title" class="form-input" required>
</div>
<div class="form-group">
    <h3>Description</h3>
    <input type="text" name="description" value="<%= article.description %>" id="description" class="form-input" required>

</div>
<div class="form-group">
    <h3>Markdown</h3>
    <textarea type="text" name="markdown" id="markdown" class="form-input" required>
        <%= article.markdown %>
    </textarea>
</div>



<a href="/articles"><button class="cancel" type="button">Cancel</button></a>
